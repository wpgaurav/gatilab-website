---
const currentYear = new Date().getFullYear();

const services = [
  { href: '/services/wordpress-development', label: 'WordPress Development' },
  { href: '/services/seo', label: 'SEO Services' },
  { href: '/services/content-marketing', label: 'Content Marketing' },
  { href: '/services/web-design', label: 'Web Design' },
  { href: '/services/branding', label: 'Logos & Branding' },
];

const company = [
  { href: '/about', label: 'About Us' },
  { href: '/blog', label: 'Blog' },
  { href: '/contact', label: 'Contact' },
];

const socials = [
  { href: 'https://twitter.com/gatilab', label: 'Twitter', icon: 'twitter' },
  { href: 'https://linkedin.com/company/gatilab', label: 'LinkedIn', icon: 'linkedin' },
];
---

<footer class="footer">
  <div class="container">
    <div class="footer-grid">
      <div class="footer-brand">
        <a href="/" class="footer-logo">
          <img src="/assets/images/gatilab-logo-light.svg" alt="Gatilab" width="140" height="40" />
        </a>
        <p class="footer-tagline">Perfection Obsessed Marketing & Design Agency</p>
        <p class="footer-description">
          We build brands that convert. Conversion-focused digital strategies, high-performance websites,
          and custom solutions that turn visitors into customers.
        </p>
        <div class="footer-stats">
          <div class="stat">
            <span class="stat-number">700+</span>
            <span class="stat-label">Clients</span>
          </div>
          <div class="stat">
            <span class="stat-number">330%</span>
            <span class="stat-label">Revenue Growth</span>
          </div>
          <div class="stat">
            <span class="stat-number">10+</span>
            <span class="stat-label">Years</span>
          </div>
        </div>
      </div>

      <div class="footer-links">
        <h4>Services</h4>
        <ul>
          {services.map(link => (
            <li><a href={link.href}>{link.label}</a></li>
          ))}
        </ul>
      </div>

      <div class="footer-links">
        <h4>Company</h4>
        <ul>
          {company.map(link => (
            <li><a href={link.href}>{link.label}</a></li>
          ))}
        </ul>
      </div>

      <div class="footer-contact">
        <h4>Get In Touch</h4>
        <div class="contact-info">
          <p>
            <strong>Email:</strong><br />
            <a href="mailto:contact@gatilab.com">contact@gatilab.com</a>
          </p>
          <p>
            <strong>Location:</strong><br />
            Delhi, India
          </p>
        </div>
        <a href="/contact" class="btn btn-accent">Start a Project</a>
      </div>
    </div>

    <div class="footer-bottom">
      <p>&copy; {currentYear} Gatilab. All rights reserved.</p>
      <div class="footer-socials">
        <a href="https://twitter.com/gatilab" aria-label="Twitter" target="_blank" rel="noopener noreferrer">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
            <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
          </svg>
        </a>
        <a href="https://linkedin.com/company/gatilab" aria-label="LinkedIn" target="_blank" rel="noopener noreferrer">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
          </svg>
        </a>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: var(--color-gray-900);
    color: var(--color-gray-300);
    padding: var(--space-20) 0 var(--space-8);
  }

  .footer-grid {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1.5fr;
    gap: var(--space-12);
    margin-bottom: var(--space-12);
  }

  .footer-logo {
    color: var(--color-white);
    display: inline-block;
    margin-bottom: var(--space-4);
  }

  .footer-tagline {
    color: var(--color-accent);
    font-weight: 600;
    margin-bottom: var(--space-4);
  }

  .footer-description {
    font-size: var(--text-sm);
    line-height: 1.7;
    margin-bottom: var(--space-6);
  }

  .footer-stats {
    display: flex;
    gap: var(--space-6);
  }

  .stat {
    display: flex;
    flex-direction: column;
  }

  .stat-number {
    font-size: var(--text-2xl);
    font-weight: 700;
    color: var(--color-white);
  }

  .stat-label {
    font-size: var(--text-xs);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-gray-500);
  }

  .footer-links h4,
  .footer-contact h4 {
    color: var(--color-white);
    font-size: var(--text-base);
    margin-bottom: var(--space-6);
  }

  .footer-links ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-links li {
    margin-bottom: var(--space-3);
  }

  .footer-links a {
    color: var(--color-gray-400);
    font-size: var(--text-sm);
    transition: color var(--transition-fast);
  }

  .footer-links a:hover {
    color: var(--color-accent);
  }

  .footer-contact .contact-info {
    margin-bottom: var(--space-6);
  }

  .footer-contact p {
    font-size: var(--text-sm);
    margin-bottom: var(--space-4);
  }

  .footer-contact a {
    color: var(--color-accent);
  }

  .footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: var(--space-8);
    border-top: 1px solid var(--color-gray-800);
  }

  .footer-bottom p {
    font-size: var(--text-sm);
    margin: 0;
  }

  .footer-socials {
    display: flex;
    gap: var(--space-4);
  }

  .footer-socials a {
    color: var(--color-gray-400);
    transition: color var(--transition-fast);
  }

  .footer-socials a:hover {
    color: var(--color-accent);
  }

  @media (max-width: 1024px) {
    .footer-grid {
      grid-template-columns: 1fr 1fr;
    }

    .footer-brand {
      grid-column: span 2;
    }
  }

  @media (max-width: 640px) {
    .footer-grid {
      grid-template-columns: 1fr;
    }

    .footer-brand {
      grid-column: span 1;
    }

    .footer-stats {
      justify-content: space-between;
    }

    .footer-bottom {
      flex-direction: column;
      gap: var(--space-4);
      text-align: center;
    }
  }
</style>
