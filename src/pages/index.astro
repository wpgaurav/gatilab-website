---
import BaseLayout from '../layouts/BaseLayout.astro';

const services = [
  'WordPress Development',
  'SEO Services',
  'Content Marketing',
  'Brand Identity',
];

const serviceDetails = [
  {
    title: 'Web Development',
    tags: ['WordPress', 'E-commerce', 'Custom Sites', 'Performance', 'Migration']
  },
  {
    title: 'SEO & Growth',
    tags: ['Technical SEO', 'Content Strategy', 'Link Building', 'Analytics']
  },
  {
    title: 'Content Marketing',
    tags: ['Blog Strategy', 'Copywriting', 'Social Media', 'Email Marketing']
  },
  {
    title: 'Brand Identity',
    tags: ['Logo Design', 'Visual Identity', 'Brand Guidelines', 'Collateral']
  }
];

const process = [
  { num: '01', title: 'Discovery', desc: 'Understanding your business, goals, and audience' },
  { num: '02', title: 'Strategy', desc: 'Crafting a plan that drives measurable results' },
  { num: '03', title: 'Execution', desc: 'Building with precision and attention to detail' },
  { num: '04', title: 'Launch', desc: 'Going live with confidence and ongoing support' }
];

const stats = [
  { number: '700+', label: 'Clients Worldwide' },
  { number: '330%', label: 'Avg. Revenue Growth' },
  { number: '10+', label: 'Years Experience' },
  { number: '47%', label: 'Traffic Increase' }
];

const projects = [
  { title: 'IBM Partner Portal', category: 'Web Development', image: '/assets/images/project-1.jpg' },
  { title: 'Adobe Campaign', category: 'Content Strategy', image: '/assets/images/project-2.jpg' },
  { title: 'HubSpot Integration', category: 'Marketing', image: '/assets/images/project-3.jpg' },
  { title: 'Govt. of India', category: 'Brand Identity', image: '/assets/images/project-4.jpg' }
];

const testimonials = [
  {
    quote: 'Gaurav Tiwari is possibly the finest talent I have seen. He deserves a great future.',
    author: 'Sushil Modi',
    role: 'Hon. MP, Former Deputy CM, Bihar'
  },
  {
    quote: 'From planning to writing to designing to marketing, Gaurav is the best I\'ve seen in my entire career.',
    author: 'Eugene M. Keen',
    role: 'Former PM, Konica Minolta'
  }
];
---

<BaseLayout title="Home" transparentHeader={true}>
  <!-- Hero Section -->
  <section class="hero">
    <div class="hero-watermark">GATILAB</div>
    <div class="hero-content">
      <div class="hero-left">
        <ul class="hero-services">
          {services.map(service => (
            <li>{service}</li>
          ))}
        </ul>
      </div>
      <div class="hero-center">
        <div class="hero-visual">
          <img src="/assets/images/gatilab-icon.svg" alt="" class="hero-icon" />
        </div>
      </div>
      <div class="hero-right">
        <h1 class="hero-title">
          Marketing agency<span class="cursor">^</span><br />
          <em>for growth</em>
        </h1>
        <p class="hero-desc">
          We partner with brands to create digital strategies that drive conversion and command attention.
        </p>
        <a href="/contact" class="btn-primary">Start a Project</a>
      </div>
    </div>
    <nav class="hero-nav">
      <a href="#services">Services</a>
      <a href="#work">Work</a>
      <a href="#process">Process</a>
      <a href="/contact">Contact</a>
    </nav>
  </section>

  <!-- Services Section -->
  <section class="services-section" id="services">
    <div class="container">
      <div class="services-header">
        <span class="section-label">Services</span>
        <p class="services-intro">
          Our services are built to help businesses grow smarter, move faster, and build with clarity.
        </p>
        <a href="/services" class="link-arrow">
          <span>See all services</span>
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="7" y1="17" x2="17" y2="7"></line>
            <polyline points="7 7 17 7 17 17"></polyline>
          </svg>
        </a>
      </div>
      <div class="services-list">
        {serviceDetails.map(service => (
          <div class="service-row">
            <h3 class="service-title">{service.title}</h3>
            <div class="service-tags">
              {service.tags.map(tag => (
                <span class="tag">
                  <svg class="sparkle" width="12" height="12" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 0L14.59 9.41L24 12L14.59 14.59L12 24L9.41 14.59L0 12L9.41 9.41L12 0Z"/>
                  </svg>
                  {tag}
                </span>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Process Section -->
  <section class="process-section" id="process">
    <div class="container">
      <div class="process-header">
        <span class="process-label">0â€”1</span>
        <div class="process-title-wrap">
          <h2 class="process-title">Process</h2>
          <p class="process-desc">Let's dive into the process. From first idea to final launch, every step is clear and intentional.</p>
        </div>
      </div>
      <div class="process-bars">
        {process.map((step, i) => (
          <div class="process-bar" style={`--delay: ${i * 0.1}s`}>
            <span class="bar-title">{step.title}</span>
            <span class="bar-number">{step.num}</span>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Stats Section -->
  <section class="stats-section">
    <div class="container">
      <h2 class="stats-title">
        Stats<br /><em>& facts</em>
      </h2>
      <p class="stats-subtitle">Proof in numbers. Because good marketing should perform.</p>
      <div class="stats-grid">
        {stats.map(stat => (
          <div class="stat-item">
            <span class="stat-number">{stat.number}</span>
            <span class="stat-label">{stat.label}</span>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Work Section -->
  <section class="work-section" id="work">
    <div class="container">
      <div class="work-header">
        <h2 class="work-title">
          Latest<br /><em>projects</em>
        </h2>
        <p class="work-desc">This is the story behind the story. Not told in words, but in results that speak for themselves.</p>
      </div>
      <div class="work-grid">
        {projects.map(project => (
          <a href="/work" class="project-card">
            <div class="project-image">
              <div class="project-placeholder">
                <span>{project.title.split(' ')[0]}</span>
              </div>
            </div>
            <div class="project-info">
              <h3>{project.title}</h3>
              <span>{project.category}</span>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Testimonials -->
  <section class="testimonials-section">
    <div class="container">
      <div class="testimonials-grid">
        {testimonials.map(t => (
          <blockquote class="testimonial">
            <p>"{t.quote}"</p>
            <footer>
              <strong>{t.author}</strong>
              <span>{t.role}</span>
            </footer>
          </blockquote>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="cta-section">
    <div class="container">
      <h2 class="cta-title">Ready to grow?</h2>
      <p class="cta-desc">Let's build something great together.</p>
      <a href="/contact" class="btn-primary light">Start Your Project</a>
    </div>
  </section>
</BaseLayout>

<style>
  /* Hero */
  .hero {
    min-height: 100vh;
    background: #1a1a1a;
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: center;
    overflow: hidden;
  }

  .hero-watermark {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-size: clamp(120px, 20vw, 300px);
    font-weight: 900;
    color: rgba(255,255,255,0.03);
    letter-spacing: -0.02em;
    white-space: nowrap;
    pointer-events: none;
    z-index: 0;
  }

  .hero-content {
    display: grid;
    grid-template-columns: 200px 1fr 1fr;
    gap: 40px;
    align-items: center;
    padding: 120px 60px 60px;
    position: relative;
    z-index: 1;
    max-width: 1400px;
    margin: 0 auto;
    width: 100%;
  }

  .hero-services {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .hero-services li {
    color: rgba(255,255,255,0.6);
    font-size: 14px;
    padding: 8px 0;
    border-bottom: 1px solid rgba(255,255,255,0.1);
  }

  .hero-center {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .hero-visual {
    width: 280px;
    height: 280px;
    background: linear-gradient(135deg, #712123 0%, #8b2a2d 100%);
    border-radius: 24px;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 40px 80px rgba(113, 33, 35, 0.3);
  }

  .hero-icon {
    width: 180px;
    height: 180px;
    filter: brightness(0) invert(1);
  }

  .hero-right {
    padding-left: 40px;
  }

  .hero-title {
    font-size: clamp(36px, 5vw, 56px);
    font-weight: 400;
    line-height: 1.1;
    color: #fff;
    margin-bottom: 24px;
  }

  .hero-title em {
    font-style: italic;
    font-family: Georgia, 'Times New Roman', serif;
  }

  .hero-title .cursor {
    color: #ed8936;
    font-size: 0.6em;
    vertical-align: super;
  }

  .hero-desc {
    font-size: 16px;
    line-height: 1.7;
    color: rgba(255,255,255,0.6);
    max-width: 380px;
    margin-bottom: 32px;
  }

  .btn-primary {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 16px 28px;
    background: #ed8936;
    color: #fff;
    font-size: 14px;
    font-weight: 600;
    border-radius: 50px;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .btn-primary:hover {
    background: #dd6b20;
    transform: translateY(-2px);
  }

  .btn-primary.light {
    background: #fff;
    color: #1a1a1a;
  }

  .btn-primary.light:hover {
    background: #f7fafc;
  }

  .hero-nav {
    position: absolute;
    bottom: 40px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 48px;
  }

  .hero-nav a {
    color: rgba(255,255,255,0.4);
    font-size: 14px;
    text-decoration: none;
    transition: color 0.3s;
  }

  .hero-nav a:hover {
    color: #fff;
  }

  /* Services Section */
  .services-section {
    background: #1a1a1a;
    padding: 100px 0;
  }

  .services-header {
    display: grid;
    grid-template-columns: auto 1fr auto;
    gap: 60px;
    align-items: start;
    margin-bottom: 80px;
  }

  .section-label {
    font-size: 14px;
    color: rgba(255,255,255,0.4);
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .services-intro {
    font-size: 24px;
    line-height: 1.4;
    color: #fff;
    max-width: 500px;
  }

  .link-arrow {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    color: #ed8936;
    font-size: 14px;
    text-decoration: none;
    transition: gap 0.3s;
  }

  .link-arrow:hover {
    gap: 12px;
  }

  .services-list {
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  .service-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: center;
    padding: 40px 0;
    border-top: 1px solid rgba(255,255,255,0.1);
  }

  .service-row:last-child {
    border-bottom: 1px solid rgba(255,255,255,0.1);
  }

  .service-title {
    font-size: clamp(32px, 5vw, 56px);
    font-weight: 400;
    color: #fff;
    margin: 0;
  }

  .service-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 16px;
  }

  .tag {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    color: rgba(255,255,255,0.5);
    font-size: 14px;
  }

  .sparkle {
    color: #ed8936;
    opacity: 0.6;
  }

  /* Process Section */
  .process-section {
    background: #faf8f5;
    padding: 100px 0;
  }

  .process-header {
    display: grid;
    grid-template-columns: auto 1fr;
    gap: 80px;
    margin-bottom: 60px;
  }

  .process-label {
    font-size: 14px;
    color: #999;
    font-weight: 500;
  }

  .process-title {
    font-size: clamp(48px, 8vw, 96px);
    font-weight: 400;
    color: #1a1a1a;
    margin: 0 0 16px;
    font-family: Georgia, 'Times New Roman', serif;
  }

  .process-desc {
    font-size: 16px;
    color: #666;
    max-width: 400px;
  }

  .process-bars {
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  .process-bar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 32px 40px;
    background: linear-gradient(90deg, #faf8f5 0%, #fce8d5 100%);
    border-radius: 0;
    position: relative;
    transition: all 0.3s ease;
  }

  .process-bar:nth-child(1) { background: linear-gradient(90deg, #faf8f5 0%, #fde8d3 60%); }
  .process-bar:nth-child(2) { background: linear-gradient(90deg, #faf8f5 0%, #fcd9b8 70%); }
  .process-bar:nth-child(3) { background: linear-gradient(90deg, #faf8f5 0%, #f9c9a0 80%); }
  .process-bar:nth-child(4) { background: linear-gradient(90deg, #faf8f5 0%, #f5b07a 90%); }

  .bar-title {
    font-size: 20px;
    font-weight: 500;
    color: #1a1a1a;
  }

  .bar-number {
    font-size: clamp(48px, 8vw, 80px);
    font-weight: 200;
    color: transparent;
    -webkit-text-stroke: 1px #1a1a1a;
    font-family: Georgia, 'Times New Roman', serif;
  }

  /* Stats Section */
  .stats-section {
    background: #1a1a1a;
    padding: 120px 0;
    text-align: center;
  }

  .stats-title {
    font-size: clamp(48px, 8vw, 80px);
    font-weight: 400;
    color: #fff;
    margin-bottom: 16px;
    line-height: 1.1;
  }

  .stats-title em {
    font-style: italic;
    font-family: Georgia, 'Times New Roman', serif;
  }

  .stats-subtitle {
    font-size: 16px;
    color: rgba(255,255,255,0.5);
    margin-bottom: 80px;
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 40px;
    max-width: 1000px;
    margin: 0 auto;
  }

  .stat-item {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .stat-number {
    font-size: clamp(36px, 5vw, 56px);
    font-weight: 600;
    color: #fff;
  }

  .stat-label {
    font-size: 14px;
    color: rgba(255,255,255,0.4);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  /* Work Section */
  .work-section {
    background: #fff;
    padding: 120px 0;
  }

  .work-header {
    text-align: center;
    margin-bottom: 80px;
  }

  .work-title {
    font-size: clamp(48px, 8vw, 80px);
    font-weight: 400;
    color: #1a1a1a;
    margin-bottom: 16px;
    line-height: 1.1;
  }

  .work-title em {
    font-style: italic;
    font-family: Georgia, 'Times New Roman', serif;
  }

  .work-desc {
    font-size: 16px;
    color: #666;
    max-width: 450px;
    margin: 0 auto;
  }

  .work-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 32px;
  }

  .project-card {
    text-decoration: none;
    display: block;
    transition: transform 0.3s;
  }

  .project-card:hover {
    transform: translateY(-8px);
  }

  .project-image {
    aspect-ratio: 4/3;
    border-radius: 16px;
    overflow: hidden;
    margin-bottom: 20px;
    background: #f5f5f5;
  }

  .project-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #e8e8e8 0%, #f5f5f5 100%);
  }

  .project-placeholder span {
    font-size: 48px;
    font-weight: 700;
    color: #ddd;
    text-transform: uppercase;
  }

  .project-info h3 {
    font-size: 20px;
    font-weight: 600;
    color: #1a1a1a;
    margin: 0 0 4px;
  }

  .project-info span {
    font-size: 14px;
    color: #999;
  }

  /* Testimonials */
  .testimonials-section {
    background: #faf8f5;
    padding: 100px 0;
  }

  .testimonials-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 40px;
  }

  .testimonial {
    background: #fff;
    padding: 48px;
    border-radius: 16px;
    margin: 0;
  }

  .testimonial p {
    font-size: 20px;
    line-height: 1.6;
    color: #1a1a1a;
    margin: 0 0 32px;
    font-style: italic;
  }

  .testimonial footer {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .testimonial strong {
    font-size: 16px;
    color: #1a1a1a;
  }

  .testimonial span {
    font-size: 14px;
    color: #999;
  }

  /* CTA Section */
  .cta-section {
    background: linear-gradient(135deg, #712123 0%, #8b2a2d 100%);
    padding: 120px 0;
    text-align: center;
  }

  .cta-title {
    font-size: clamp(40px, 6vw, 72px);
    font-weight: 400;
    color: #fff;
    margin-bottom: 16px;
    font-family: Georgia, 'Times New Roman', serif;
    font-style: italic;
  }

  .cta-desc {
    font-size: 18px;
    color: rgba(255,255,255,0.7);
    margin-bottom: 40px;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .hero-content {
      grid-template-columns: 1fr;
      text-align: center;
      padding: 100px 24px 80px;
    }

    .hero-left {
      display: none;
    }

    .hero-right {
      padding: 0;
    }

    .hero-desc {
      margin: 0 auto 32px;
    }

    .hero-nav {
      position: static;
      transform: none;
      justify-content: center;
      margin-top: 60px;
    }

    .services-header {
      grid-template-columns: 1fr;
      gap: 24px;
    }

    .service-row {
      grid-template-columns: 1fr;
      gap: 20px;
    }

    .process-header {
      grid-template-columns: 1fr;
      gap: 24px;
    }

    .stats-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .work-grid {
      grid-template-columns: 1fr;
    }

    .testimonials-grid {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 640px) {
    .hero-visual {
      width: 200px;
      height: 200px;
    }

    .hero-icon {
      width: 120px;
      height: 120px;
    }

    .hero-nav {
      flex-wrap: wrap;
      gap: 24px;
    }

    .process-bar {
      padding: 24px;
    }

    .stats-grid {
      gap: 32px;
    }

    .testimonial {
      padding: 32px;
    }
  }
</style>
