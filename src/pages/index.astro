---
import BaseLayout from '../layouts/BaseLayout.astro';

const clients = ['IBM', 'Adobe', 'HubSpot', 'Canva', 'Airtel', 'Govt. of India'];

const services = [
  {
    number: '01',
    title: 'Web Development',
    description: 'High-performance WordPress sites that load fast and convert visitors into customers.',
    link: '/services#wordpress-development'
  },
  {
    number: '02',
    title: 'SEO & Growth',
    description: 'Revenue-focused SEO that brings customers, not just traffic. Real rankings, real results.',
    link: '/services#seo'
  },
  {
    number: '03',
    title: 'Content Marketing',
    description: 'Strategic content that ranks, engages, and converts. No fluff, just results.',
    link: '/services#content-marketing'
  },
  {
    number: '04',
    title: 'Brand & Design',
    description: 'Visual identities that make you memorable and build trust before you say a word.',
    link: '/services#branding'
  }
];

const testimonials = [
  {
    quote: 'Gaurav Tiwari is possibly the finest talent I have seen. He deserves a great future.',
    author: 'Sushil Modi',
    role: 'Hon. MP, Former Deputy CM, Bihar'
  },
  {
    quote: 'From planning to writing to designing to marketing, Gaurav is the best I\'ve seen in my entire career.',
    author: 'Eugene M. Keen',
    role: 'Former PM, Konica Minolta'
  }
];

const stats = [
  { number: '700+', label: 'Clients Worldwide' },
  { number: '330%', label: 'Avg. Revenue Growth' },
  { number: '10+', label: 'Years Experience' },
  { number: '20+', label: 'Countries Served' }
];
---

<BaseLayout title="Home" transparentHeader={true}>
  <!-- Hero Section -->
  <section class="hero">
    <div class="hero-bg"></div>
    <div class="container">
      <div class="hero-content">
        <div class="hero-eyebrow">
          <span class="eyebrow-line"></span>
          <span>Digital Marketing Agency</span>
        </div>
        <h1 class="hero-title">
          We Build Brands
          <span class="title-accent">That Convert</span>
        </h1>
        <p class="hero-subtitle">
          Conversion-focused strategies that turn visitors into customers.
          700+ clients trust us with their growth.
        </p>
        <div class="hero-cta">
          <a href="/contact" class="btn-primary-large">
            Start Your Project
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <line x1="5" y1="12" x2="19" y2="12"></line>
              <polyline points="12 5 19 12 12 19"></polyline>
            </svg>
          </a>
          <a href="/services" class="btn-ghost">View Services</a>
        </div>
      </div>
      <div class="hero-stats">
        {stats.map(stat => (
          <div class="hero-stat">
            <span class="stat-num">{stat.number}</span>
            <span class="stat-text">{stat.label}</span>
          </div>
        ))}
      </div>
    </div>
    <div class="scroll-hint">
      <span>Scroll</span>
      <div class="scroll-line"></div>
    </div>
  </section>

  <!-- Clients Marquee -->
  <section class="clients-bar">
    <div class="marquee">
      <div class="marquee-content">
        {[...clients, ...clients, ...clients].map(client => (
          <span class="client-item">{client}</span>
        ))}
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section class="about-section">
    <div class="container">
      <div class="about-grid">
        <div class="about-left">
          <span class="section-label">About Us</span>
          <h2 class="section-title">
            Perfection Obsessed
            <br />Marketing Agency
          </h2>
        </div>
        <div class="about-right">
          <p class="about-lead">
            We don't chase vanity metrics. We measure success by what mattersâ€”leads generated,
            sales closed, and businesses grown.
          </p>
          <p class="about-text">
            Founded in 2014 in Delhi, we've grown from a small agency to a trusted partner
            for 700+ clients globally. From startups to enterprises like IBM, Adobe, and
            the Government of India.
          </p>
          <a href="/about" class="link-arrow">
            Learn more about us
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <line x1="5" y1="12" x2="19" y2="12"></line>
              <polyline points="12 5 19 12 12 19"></polyline>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section class="services-section">
    <div class="container">
      <div class="services-header">
        <span class="section-label">What We Do</span>
        <h2 class="section-title">Services Built<br />for Results</h2>
      </div>
      <div class="services-list">
        {services.map(service => (
          <a href={service.link} class="service-item">
            <span class="service-number">{service.number}</span>
            <div class="service-content">
              <h3 class="service-title">{service.title}</h3>
              <p class="service-desc">{service.description}</p>
            </div>
            <div class="service-arrow">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <line x1="7" y1="17" x2="17" y2="7"></line>
                <polyline points="7 7 17 7 17 17"></polyline>
              </svg>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Big Statement -->
  <section class="statement-section">
    <div class="container">
      <blockquote class="big-statement">
        "Every pixel, every word, every strategy has one job:
        <span class="highlight">drive results.</span>"
      </blockquote>
    </div>
  </section>

  <!-- Testimonials -->
  <section class="testimonials-section">
    <div class="container">
      <div class="testimonials-header">
        <span class="section-label">Testimonials</span>
        <h2 class="section-title">What Clients Say</h2>
      </div>
      <div class="testimonials-grid">
        {testimonials.map(testimonial => (
          <div class="testimonial-card">
            <p class="testimonial-quote">"{testimonial.quote}"</p>
            <div class="testimonial-author">
              <div class="author-avatar">{testimonial.author.split(' ').map(n => n[0]).join('')}</div>
              <div class="author-info">
                <strong>{testimonial.author}</strong>
                <span>{testimonial.role}</span>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="cta-section">
    <div class="container">
      <div class="cta-content">
        <h2 class="cta-title">Ready to grow?</h2>
        <p class="cta-text">Let's build something great together.</p>
        <a href="/contact" class="btn-primary-large light">
          Start Your Project
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="5" y1="12" x2="19" y2="12"></line>
            <polyline points="12 5 19 12 12 19"></polyline>
          </svg>
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* Hero */
  .hero {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    position: relative;
    padding: 120px 0 60px;
    overflow: hidden;
  }

  .hero-bg {
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, #0a1628 0%, #1a365d 50%, #234876 100%);
    z-index: -2;
  }

  .hero-bg::after {
    content: '';
    position: absolute;
    inset: 0;
    background: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='0.03'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
    z-index: -1;
  }

  .hero .container {
    display: flex;
    flex-direction: column;
    gap: 60px;
  }

  .hero-content {
    max-width: 900px;
  }

  .hero-eyebrow {
    display: flex;
    align-items: center;
    gap: 16px;
    margin-bottom: 24px;
    color: #ed8936;
    font-size: 14px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.15em;
  }

  .eyebrow-line {
    width: 40px;
    height: 2px;
    background: #ed8936;
  }

  .hero-title {
    font-size: clamp(48px, 8vw, 96px);
    font-weight: 800;
    line-height: 1.05;
    color: #fff;
    margin-bottom: 24px;
  }

  .title-accent {
    display: block;
    background: linear-gradient(135deg, #ed8936 0%, #f6ad55 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-subtitle {
    font-size: 20px;
    line-height: 1.7;
    color: rgba(255,255,255,0.7);
    max-width: 500px;
    margin-bottom: 40px;
  }

  .hero-cta {
    display: flex;
    gap: 16px;
    flex-wrap: wrap;
  }

  .btn-primary-large {
    display: inline-flex;
    align-items: center;
    gap: 12px;
    padding: 18px 32px;
    background: #ed8936;
    color: #fff;
    font-size: 16px;
    font-weight: 600;
    border-radius: 8px;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .btn-primary-large:hover {
    background: #dd6b20;
    transform: translateY(-2px);
    color: #fff;
  }

  .btn-primary-large.light {
    background: #fff;
    color: #1a365d;
  }

  .btn-primary-large.light:hover {
    background: #f7fafc;
    color: #1a365d;
  }

  .btn-ghost {
    display: inline-flex;
    align-items: center;
    padding: 18px 32px;
    color: #fff;
    font-size: 16px;
    font-weight: 600;
    border: 2px solid rgba(255,255,255,0.2);
    border-radius: 8px;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .btn-ghost:hover {
    border-color: rgba(255,255,255,0.5);
    background: rgba(255,255,255,0.05);
    color: #fff;
  }

  .hero-stats {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 32px;
    padding-top: 40px;
    border-top: 1px solid rgba(255,255,255,0.1);
  }

  .hero-stat {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .stat-num {
    font-size: 36px;
    font-weight: 800;
    color: #fff;
  }

  .stat-text {
    font-size: 14px;
    color: rgba(255,255,255,0.5);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .scroll-hint {
    position: absolute;
    bottom: 40px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 8px;
    color: rgba(255,255,255,0.4);
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .scroll-line {
    width: 1px;
    height: 40px;
    background: linear-gradient(to bottom, rgba(255,255,255,0.4), transparent);
    animation: scrollPulse 2s ease-in-out infinite;
  }

  @keyframes scrollPulse {
    0%, 100% { opacity: 0.4; transform: scaleY(1); }
    50% { opacity: 1; transform: scaleY(1.2); }
  }

  /* Clients Marquee */
  .clients-bar {
    background: #0a1628;
    padding: 24px 0;
    overflow: hidden;
  }

  .marquee {
    display: flex;
    overflow: hidden;
  }

  .marquee-content {
    display: flex;
    gap: 60px;
    animation: marquee 30s linear infinite;
  }

  .client-item {
    font-size: 18px;
    font-weight: 600;
    color: rgba(255,255,255,0.4);
    white-space: nowrap;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  @keyframes marquee {
    0% { transform: translateX(0); }
    100% { transform: translateX(-33.333%); }
  }

  /* About Section */
  .about-section {
    padding: 120px 0;
    background: #fff;
  }

  .about-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 80px;
    align-items: start;
  }

  .section-label {
    display: inline-block;
    font-size: 12px;
    font-weight: 700;
    color: #ed8936;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    margin-bottom: 16px;
  }

  .section-title {
    font-size: clamp(36px, 5vw, 56px);
    font-weight: 800;
    line-height: 1.1;
    color: #1a202c;
  }

  .about-lead {
    font-size: 24px;
    line-height: 1.5;
    color: #2d3748;
    margin-bottom: 24px;
  }

  .about-text {
    font-size: 18px;
    line-height: 1.8;
    color: #718096;
    margin-bottom: 32px;
  }

  .link-arrow {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    font-size: 16px;
    font-weight: 600;
    color: #1a365d;
    text-decoration: none;
    transition: gap 0.3s ease;
  }

  .link-arrow:hover {
    gap: 16px;
    color: #ed8936;
  }

  /* Services Section */
  .services-section {
    padding: 120px 0;
    background: #f7fafc;
  }

  .services-header {
    margin-bottom: 60px;
  }

  .services-list {
    display: flex;
    flex-direction: column;
  }

  .service-item {
    display: grid;
    grid-template-columns: 80px 1fr auto;
    gap: 40px;
    align-items: center;
    padding: 40px 0;
    border-bottom: 1px solid #e2e8f0;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .service-item:first-child {
    border-top: 1px solid #e2e8f0;
  }

  .service-item:hover {
    padding-left: 20px;
    background: #fff;
  }

  .service-number {
    font-size: 14px;
    font-weight: 700;
    color: #ed8936;
  }

  .service-title {
    font-size: 28px;
    font-weight: 700;
    color: #1a202c;
    margin-bottom: 8px;
  }

  .service-desc {
    font-size: 16px;
    color: #718096;
    line-height: 1.6;
    margin: 0;
  }

  .service-arrow {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    border: 2px solid #e2e8f0;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #1a365d;
    transition: all 0.3s ease;
  }

  .service-item:hover .service-arrow {
    background: #1a365d;
    border-color: #1a365d;
    color: #fff;
  }

  /* Statement Section */
  .statement-section {
    padding: 120px 0;
    background: #1a365d;
  }

  .big-statement {
    font-size: clamp(28px, 4vw, 48px);
    font-weight: 600;
    line-height: 1.4;
    color: #fff;
    text-align: center;
    max-width: 900px;
    margin: 0 auto;
  }

  .big-statement .highlight {
    color: #ed8936;
  }

  /* Testimonials */
  .testimonials-section {
    padding: 120px 0;
    background: #fff;
  }

  .testimonials-header {
    text-align: center;
    margin-bottom: 60px;
  }

  .testimonials-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 32px;
  }

  .testimonial-card {
    background: #f7fafc;
    border-radius: 16px;
    padding: 40px;
  }

  .testimonial-quote {
    font-size: 20px;
    line-height: 1.7;
    color: #2d3748;
    margin-bottom: 32px;
  }

  .testimonial-author {
    display: flex;
    align-items: center;
    gap: 16px;
  }

  .author-avatar {
    width: 48px;
    height: 48px;
    background: #1a365d;
    color: #fff;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: 14px;
  }

  .author-info strong {
    display: block;
    font-size: 16px;
    color: #1a202c;
  }

  .author-info span {
    font-size: 14px;
    color: #718096;
  }

  /* CTA Section */
  .cta-section {
    padding: 120px 0;
    background: linear-gradient(135deg, #1a365d 0%, #0a1628 100%);
  }

  .cta-content {
    text-align: center;
  }

  .cta-title {
    font-size: clamp(40px, 6vw, 72px);
    font-weight: 800;
    color: #fff;
    margin-bottom: 16px;
  }

  .cta-text {
    font-size: 20px;
    color: rgba(255,255,255,0.7);
    margin-bottom: 40px;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .hero-stats {
      grid-template-columns: repeat(2, 1fr);
    }

    .about-grid {
      grid-template-columns: 1fr;
      gap: 40px;
    }

    .testimonials-grid {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 768px) {
    .hero {
      padding: 100px 0 40px;
    }

    .hero-cta {
      flex-direction: column;
    }

    .hero-cta .btn-primary-large,
    .hero-cta .btn-ghost {
      width: 100%;
      justify-content: center;
    }

    .hero-stats {
      gap: 24px;
    }

    .stat-num {
      font-size: 28px;
    }

    .service-item {
      grid-template-columns: 1fr;
      gap: 16px;
    }

    .service-number {
      order: -1;
    }

    .service-arrow {
      display: none;
    }

    .scroll-hint {
      display: none;
    }
  }
</style>
