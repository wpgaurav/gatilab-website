---
import BaseLayout from '../../layouts/BaseLayout.astro';

const posts = [
  {
    slug: 'conversion-focused-web-design',
    title: 'Conversion-Focused Web Design: What Actually Matters',
    excerpt: 'Pretty websites that don\'t convert are failures. Here\'s how to design websites that actually drive results.',
    date: '2026-01-05',
    category: 'Web Design',
    readTime: '8 min read'
  },
  {
    slug: 'seo-mistakes-businesses-make',
    title: 'The 7 SEO Mistakes We See Most Businesses Make',
    excerpt: 'After working with 700+ clients, these are the SEO mistakes that keep showing up. And how to avoid them.',
    date: '2026-01-02',
    category: 'SEO',
    readTime: '6 min read'
  },
  {
    slug: 'wordpress-performance-optimization',
    title: 'WordPress Performance: How We Get Sub-2-Second Load Times',
    excerpt: 'Most WordPress sites are slow. Here\'s our systematic approach to getting lightning-fast performance.',
    date: '2025-12-28',
    category: 'WordPress',
    readTime: '10 min read'
  },
  {
    slug: 'content-marketing-roi',
    title: 'Content Marketing ROI: How to Measure What Actually Matters',
    excerpt: 'Stop measuring pageviews. Start measuring business impact. Here\'s how we track content marketing success.',
    date: '2025-12-20',
    category: 'Content',
    readTime: '7 min read'
  },
  {
    slug: 'choosing-right-cms',
    title: 'Choosing the Right CMS: WordPress, Shopify, or Custom?',
    excerpt: 'The CMS decision affects everything. Here\'s our framework for choosing the right platform.',
    date: '2025-12-15',
    category: 'Strategy',
    readTime: '9 min read'
  },
  {
    slug: 'branding-for-small-business',
    title: 'Branding for Small Business: What You Actually Need',
    excerpt: 'You don\'t need a $50,000 brand package. Here\'s what small businesses should focus on.',
    date: '2025-12-10',
    category: 'Branding',
    readTime: '5 min read'
  }
];

const categories = ['All', 'Web Design', 'SEO', 'WordPress', 'Content', 'Strategy', 'Branding'];
---

<BaseLayout
  title="Blog"
  description="Insights on digital marketing, web development, SEO, and content strategy from the Gatilab team. Practical advice, no fluff."
>
  <!-- Hero -->
  <section class="page-hero">
    <div class="container">
      <div class="hero-content gsap-fade-up">
        <span class="section-tag">Blog</span>
        <h1>Insights & Resources</h1>
        <p class="hero-description">
          Practical advice on marketing, design, and development. No fluff, just actionable insights
          from 10+ years of building brands that convert.
        </p>
      </div>
    </div>
  </section>

  <!-- Blog Content -->
  <section class="blog-section section">
    <div class="container">
      <!-- Categories -->
      <div class="blog-categories gsap-fade-up">
        {categories.map((category, index) => (
          <button class:list={['category-btn', { active: index === 0 }]} data-category={category.toLowerCase()}>
            {category}
          </button>
        ))}
      </div>

      <!-- Posts Grid -->
      <div class="posts-grid stagger-container">
        {posts.map(post => (
          <article class="post-card stagger-item" data-category={post.category.toLowerCase()}>
            <div class="post-image">
              <div class="post-placeholder">
                <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/>
                  <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"/>
                </svg>
              </div>
            </div>
            <div class="post-content">
              <div class="post-meta">
                <span class="post-category">{post.category}</span>
                <span class="post-date">{new Date(post.date).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })}</span>
              </div>
              <h2><a href={`/blog/${post.slug}`}>{post.title}</a></h2>
              <p>{post.excerpt}</p>
              <div class="post-footer">
                <span class="read-time">{post.readTime}</span>
                <a href={`/blog/${post.slug}`} class="read-more">
                  Read Article
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="5" y1="12" x2="19" y2="12"/>
                    <polyline points="12 5 19 12 12 19"/>
                  </svg>
                </a>
              </div>
            </div>
          </article>
        ))}
      </div>

      <!-- Newsletter -->
      <div class="newsletter-box gsap-fade-up">
        <div class="newsletter-content">
          <h3>Subscribe to The Friday Drop</h3>
          <p>Weekly insights on marketing, design, and development. Join 5,000+ subscribers.</p>
        </div>
        <form class="newsletter-form">
          <input type="email" placeholder="your@email.com" required />
          <button type="submit" class="btn btn-accent">Subscribe</button>
        </form>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .page-hero {
    background: linear-gradient(135deg, var(--color-primary-dark) 0%, var(--color-primary) 100%);
    padding: var(--space-32) 0 var(--space-20);
    color: var(--color-white);
    text-align: center;
  }

  .page-hero h1 {
    color: var(--color-white);
    font-size: var(--text-5xl);
    margin-bottom: var(--space-6);
  }

  .hero-description {
    font-size: var(--text-xl);
    color: rgba(255,255,255,0.85);
    max-width: 700px;
    margin: 0 auto;
  }

  .section-tag {
    display: inline-block;
    font-size: var(--text-sm);
    font-weight: 600;
    color: var(--color-accent);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: var(--space-4);
  }

  .blog-categories {
    display: flex;
    gap: var(--space-2);
    justify-content: center;
    flex-wrap: wrap;
    margin-bottom: var(--space-12);
  }

  .category-btn {
    background: transparent;
    border: 1px solid var(--color-gray-300);
    padding: var(--space-2) var(--space-4);
    border-radius: var(--radius-full);
    font-size: var(--text-sm);
    font-weight: 500;
    cursor: pointer;
    transition: all var(--transition-fast);
    color: var(--color-gray-600);
  }

  .category-btn:hover {
    border-color: var(--color-primary);
    color: var(--color-primary);
  }

  .category-btn.active {
    background: var(--color-primary);
    border-color: var(--color-primary);
    color: var(--color-white);
  }

  .posts-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-8);
    margin-bottom: var(--space-16);
  }

  .post-card {
    background: var(--color-white);
    border-radius: var(--radius-xl);
    overflow: hidden;
    border: 1px solid var(--color-gray-200);
    transition: all var(--transition-base);
  }

  .post-card:hover {
    border-color: var(--color-primary);
    box-shadow: var(--shadow-lg);
    transform: translateY(-4px);
  }

  .post-image {
    aspect-ratio: 16 / 9;
    background: var(--color-gray-100);
    overflow: hidden;
  }

  .post-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-gray-400);
    background: linear-gradient(135deg, var(--color-gray-100) 0%, var(--color-gray-200) 100%);
  }

  .post-content {
    padding: var(--space-6);
  }

  .post-meta {
    display: flex;
    align-items: center;
    gap: var(--space-4);
    margin-bottom: var(--space-3);
  }

  .post-category {
    background: var(--color-primary);
    color: var(--color-white);
    padding: var(--space-1) var(--space-3);
    border-radius: var(--radius-md);
    font-size: var(--text-xs);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .post-date {
    font-size: var(--text-sm);
    color: var(--color-gray-500);
  }

  .post-content h2 {
    font-size: var(--text-xl);
    margin-bottom: var(--space-3);
    line-height: 1.4;
  }

  .post-content h2 a {
    color: var(--color-gray-900);
    transition: color var(--transition-fast);
  }

  .post-content h2 a:hover {
    color: var(--color-primary);
  }

  .post-content p {
    color: var(--color-gray-600);
    font-size: var(--text-sm);
    line-height: 1.7;
    margin-bottom: var(--space-4);
  }

  .post-footer {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-top: var(--space-4);
    border-top: 1px solid var(--color-gray-200);
  }

  .read-time {
    font-size: var(--text-sm);
    color: var(--color-gray-500);
  }

  .read-more {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    font-size: var(--text-sm);
    font-weight: 600;
    color: var(--color-primary);
    transition: gap var(--transition-fast);
  }

  .read-more:hover {
    gap: var(--space-3);
    color: var(--color-accent);
  }

  .newsletter-box {
    background: var(--color-gray-50);
    border-radius: var(--radius-2xl);
    padding: var(--space-10);
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--space-8);
  }

  .newsletter-content h3 {
    margin-bottom: var(--space-2);
  }

  .newsletter-content p {
    color: var(--color-gray-600);
    margin: 0;
  }

  .newsletter-form {
    display: flex;
    gap: var(--space-3);
  }

  .newsletter-form input {
    padding: var(--space-3) var(--space-4);
    border: 1px solid var(--color-gray-300);
    border-radius: var(--radius-lg);
    font-size: var(--text-base);
    min-width: 280px;
    transition: border-color var(--transition-fast);
  }

  .newsletter-form input:focus {
    outline: none;
    border-color: var(--color-primary);
  }

  @media (max-width: 1024px) {
    .posts-grid {
      grid-template-columns: 1fr;
    }

    .newsletter-box {
      flex-direction: column;
      text-align: center;
    }

    .newsletter-form {
      width: 100%;
      flex-direction: column;
    }

    .newsletter-form input {
      min-width: 100%;
    }
  }

  @media (max-width: 640px) {
    .page-hero h1 {
      font-size: var(--text-4xl);
    }
  }
</style>

<script>
  // Category filtering
  document.addEventListener('DOMContentLoaded', () => {
    const buttons = document.querySelectorAll('.category-btn');
    const posts = document.querySelectorAll('.post-card');

    buttons.forEach(button => {
      button.addEventListener('click', () => {
        // Update active button
        buttons.forEach(b => b.classList.remove('active'));
        button.classList.add('active');

        const category = button.dataset.category;

        // Filter posts
        posts.forEach(post => {
          if (category === 'all' || post.dataset.category === category) {
            post.style.display = 'block';
          } else {
            post.style.display = 'none';
          }
        });
      });
    });
  });
</script>
