---
import BaseLayout from '../../layouts/BaseLayout.astro';

const services = [
  {
    slug: 'wordpress-development',
    title: 'WordPress Development',
    description: 'High-performance websites that load fast, convert visitors, and don\'t break when you update plugins.',
    features: ['Custom Theme/Build', 'Performance Optimization', 'Security Hardening', 'SEO Foundation', 'Training & Support'],
    pricing: 'Starting at $3,500',
    timeline: '4-6 weeks',
    stats: '200+ sites delivered',
    icon: 'code'
  },
  {
    slug: 'seo',
    title: 'SEO Services',
    description: 'Rankings that bring customers, not just traffic. Revenue-focused keyword strategy and technical optimization.',
    features: ['Technical Audit', 'Keyword Strategy', 'On-Page Optimization', 'Link Building', 'Monthly Reporting'],
    pricing: 'Starting at $800/month',
    timeline: '3-4 months for first results',
    stats: '47% avg traffic increase',
    icon: 'search'
  },
  {
    slug: 'content-marketing',
    title: 'Content Marketing',
    description: 'Content that ranks, converts, and doesn\'t read like it was written by a committee of robots.',
    features: ['Content Strategy', 'Blog Posts', 'Landing Pages', 'Email Sequences', 'Social Content'],
    pricing: 'Starting at $250/article',
    timeline: '5-7 business days per piece',
    stats: '1,750+ articles published',
    icon: 'edit'
  },
  {
    slug: 'web-design',
    title: 'Web Design',
    description: 'Design that looks good AND converts. Strategic visual communication, not just pretty pixels.',
    features: ['Discovery & Strategy', 'Wireframes', 'Visual Design', 'Responsive Design', 'Design System'],
    pricing: 'Starting at $2,500',
    timeline: '2-4 weeks',
    stats: '700+ clients served',
    icon: 'palette'
  },
  {
    slug: 'branding',
    title: 'Logos & Branding',
    description: 'Visual identity that makes people remember you and trust you before you\'ve said a word.',
    features: ['Logo Design', 'Color Palette', 'Typography', 'Brand Guidelines', 'Usage Examples'],
    pricing: 'Starting at $500',
    timeline: '1-4 weeks',
    stats: 'Full brand packages',
    icon: 'star'
  },
  {
    slug: 'graphic-design',
    title: 'Graphic Design',
    description: 'Visual assets for marketing, social media, print, and anywhere else you need to look professional.',
    features: ['Social Media Graphics', 'Infographics', 'Presentations', 'Print Materials', 'Marketing Collateral'],
    pricing: 'Starting at $200',
    timeline: '2-7 days',
    stats: 'Monthly retainers available',
    icon: 'image'
  }
];
---

<BaseLayout
  title="Services"
  description="Digital marketing services from Gatilab: WordPress development, SEO, content marketing, web design, branding, and graphic design. Results-focused solutions."
>
  <!-- Hero -->
  <section class="page-hero">
    <div class="container">
      <div class="hero-content gsap-fade-up">
        <span class="section-tag">Our Services</span>
        <h1>Services Built for Results</h1>
        <p class="hero-description">
          Full-stack capability: Strategy, design, development, content, SEO—all under one roof.
          No handoffs between agencies. One team owning the entire outcome.
        </p>
      </div>
    </div>
  </section>

  <!-- Services Grid -->
  <section class="services-section section">
    <div class="container">
      <div class="services-grid stagger-container">
        {services.map(service => (
          <div class="service-card stagger-item" id={service.slug}>
            <div class="service-header">
              <div class="service-icon">
                {service.icon === 'code' && (
                  <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="16 18 22 12 16 6"/>
                    <polyline points="8 6 2 12 8 18"/>
                  </svg>
                )}
                {service.icon === 'search' && (
                  <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="11" cy="11" r="8"/>
                    <line x1="21" y1="21" x2="16.65" y2="16.65"/>
                  </svg>
                )}
                {service.icon === 'edit' && (
                  <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/>
                    <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"/>
                  </svg>
                )}
                {service.icon === 'palette' && (
                  <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M12 2C6.5 2 2 6.5 2 12s4.5 10 10 10c.926 0 1.648-.746 1.648-1.688 0-.437-.18-.835-.437-1.125-.29-.289-.438-.652-.438-1.125a1.64 1.64 0 0 1 1.668-1.668h1.996c3.051 0 5.555-2.503 5.555-5.555C21.965 6.012 17.461 2 12 2z"/>
                  </svg>
                )}
                {service.icon === 'star' && (
                  <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/>
                  </svg>
                )}
                {service.icon === 'image' && (
                  <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
                    <circle cx="8.5" cy="8.5" r="1.5"/>
                    <polyline points="21 15 16 10 5 21"/>
                  </svg>
                )}
              </div>
              <h2>{service.title}</h2>
            </div>
            <p class="service-description">{service.description}</p>

            <div class="service-features">
              <h4>What You Get:</h4>
              <ul>
                {service.features.map(feature => (
                  <li>
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <polyline points="20 6 9 17 4 12"/>
                    </svg>
                    {feature}
                  </li>
                ))}
              </ul>
            </div>

            <div class="service-meta">
              <div class="meta-item">
                <span class="meta-label">Investment</span>
                <span class="meta-value">{service.pricing}</span>
              </div>
              <div class="meta-item">
                <span class="meta-label">Timeline</span>
                <span class="meta-value">{service.timeline}</span>
              </div>
              <div class="meta-item">
                <span class="meta-label">Track Record</span>
                <span class="meta-value accent">{service.stats}</span>
              </div>
            </div>

            <a href="/contact" class="btn btn-primary">Get Started</a>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- White Label -->
  <section class="whitelabel-section section bg-dark">
    <div class="container">
      <div class="whitelabel-grid">
        <div class="whitelabel-content gsap-fade-up">
          <span class="section-tag-light">For Agencies</span>
          <h2>White-Label Services</h2>
          <p class="lead">We do the work. Your agency gets the credit. Your clients never know we exist.</p>
          <p>
            Perfect for agencies without in-house dev/design capacity, consultants who sell strategy
            but need execution partners, and marketing firms expanding service offerings.
          </p>
          <ul class="whitelabel-list">
            <li>
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="20 6 9 17 4 12"/>
              </svg>
              WordPress Development
            </li>
            <li>
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="20 6 9 17 4 12"/>
              </svg>
              Web Design
            </li>
            <li>
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="20 6 9 17 4 12"/>
              </svg>
              SEO Execution
            </li>
            <li>
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="20 6 9 17 4 12"/>
              </svg>
              Content Writing
            </li>
            <li>
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="20 6 9 17 4 12"/>
              </svg>
              Graphic Design
            </li>
          </ul>
          <div class="whitelabel-pricing">
            <span>15-20% below retail rates</span>
            <span>Volume discounts available</span>
          </div>
          <a href="/contact" class="btn btn-accent">Partner With Us</a>
        </div>
        <div class="whitelabel-visual gsap-fade-up">
          <div class="process-card">
            <h4>How It Works</h4>
            <ol>
              <li>You scope the project with your client</li>
              <li>We deliver to your specifications</li>
              <li>All files in your branding (or unbranded)</li>
              <li>Direct communication with your team only</li>
              <li>Your client never knows</li>
            </ol>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Process -->
  <section class="process-section section">
    <div class="container">
      <div class="section-header gsap-fade-up">
        <span class="section-tag">How We Work</span>
        <h2>Our Process</h2>
        <p>Clear phases. Regular communication. No surprises.</p>
      </div>
      <div class="process-grid stagger-container">
        <div class="process-step stagger-item">
          <div class="step-number">01</div>
          <h3>Discovery</h3>
          <p>We learn about your business, goals, and requirements. This is where questionnaires and kickoff calls happen.</p>
        </div>
        <div class="process-step stagger-item">
          <div class="step-number">02</div>
          <h3>Strategy</h3>
          <p>We create the roadmap for your project—sitemap, content plan, technical approach, or design direction.</p>
        </div>
        <div class="process-step stagger-item">
          <div class="step-number">03</div>
          <h3>Creation</h3>
          <p>The actual building—design, development, writing, or whatever your project requires.</p>
        </div>
        <div class="process-step stagger-item">
          <div class="step-number">04</div>
          <h3>Review</h3>
          <p>You review deliverables, we refine based on feedback. Two revision rounds included.</p>
        </div>
        <div class="process-step stagger-item">
          <div class="step-number">05</div>
          <h3>Launch</h3>
          <p>Final delivery, training (if applicable), and documentation. 30-day support included.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="cta-section">
    <div class="container">
      <div class="cta-content gsap-fade-up">
        <h2>Ready to Get Started?</h2>
        <p>Let's discuss your project. No pressure, no obligation—just an honest conversation.</p>
        <div class="cta-actions">
          <a href="/contact" class="btn btn-accent btn-lg">Start Your Project</a>
          <a href="mailto:contact@gatilab.com" class="btn btn-outline-light btn-lg">contact@gatilab.com</a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .page-hero {
    background: linear-gradient(135deg, var(--color-primary-dark) 0%, var(--color-primary) 100%);
    padding: var(--space-32) 0 var(--space-20);
    color: var(--color-white);
    text-align: center;
  }

  .page-hero h1 {
    color: var(--color-white);
    font-size: var(--text-5xl);
    margin-bottom: var(--space-6);
  }

  .hero-description {
    font-size: var(--text-xl);
    color: rgba(255,255,255,0.85);
    max-width: 700px;
    margin: 0 auto;
  }

  .section-tag {
    display: inline-block;
    font-size: var(--text-sm);
    font-weight: 600;
    color: var(--color-accent);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: var(--space-4);
  }

  .section-tag-light {
    display: inline-block;
    font-size: var(--text-sm);
    font-weight: 600;
    color: var(--color-accent);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: var(--space-4);
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-8);
  }

  .service-card {
    background: var(--color-white);
    border-radius: var(--radius-xl);
    padding: var(--space-10);
    border: 1px solid var(--color-gray-200);
    transition: all var(--transition-base);
  }

  .service-card:hover {
    border-color: var(--color-primary);
    box-shadow: var(--shadow-xl);
  }

  .service-header {
    display: flex;
    align-items: center;
    gap: var(--space-4);
    margin-bottom: var(--space-4);
  }

  .service-icon {
    width: 56px;
    height: 56px;
    background: var(--color-gray-100);
    border-radius: var(--radius-lg);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-primary);
    flex-shrink: 0;
  }

  .service-card:hover .service-icon {
    background: var(--color-primary);
    color: var(--color-white);
  }

  .service-header h2 {
    font-size: var(--text-2xl);
    margin: 0;
  }

  .service-description {
    color: var(--color-gray-600);
    margin-bottom: var(--space-6);
    line-height: 1.7;
  }

  .service-features h4 {
    font-size: var(--text-sm);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-gray-500);
    margin-bottom: var(--space-3);
  }

  .service-features ul {
    list-style: none;
    padding: 0;
    margin: 0 0 var(--space-6);
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-2);
  }

  .service-features li {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    font-size: var(--text-sm);
    color: var(--color-gray-700);
  }

  .service-features svg {
    color: var(--color-accent);
    flex-shrink: 0;
  }

  .service-meta {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-4);
    padding: var(--space-4) 0;
    border-top: 1px solid var(--color-gray-200);
    border-bottom: 1px solid var(--color-gray-200);
    margin-bottom: var(--space-6);
  }

  .meta-item {
    text-align: center;
  }

  .meta-label {
    display: block;
    font-size: var(--text-xs);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-gray-500);
    margin-bottom: var(--space-1);
  }

  .meta-value {
    font-weight: 600;
    font-size: var(--text-sm);
    color: var(--color-gray-800);
  }

  .meta-value.accent {
    color: var(--color-accent);
  }

  /* White Label */
  .whitelabel-grid {
    display: grid;
    grid-template-columns: 1.2fr 0.8fr;
    gap: var(--space-16);
    align-items: start;
  }

  .whitelabel-content .lead {
    font-size: var(--text-xl);
    color: var(--color-gray-300);
    margin-bottom: var(--space-4);
  }

  .whitelabel-content p {
    color: var(--color-gray-400);
  }

  .whitelabel-list {
    list-style: none;
    padding: 0;
    margin: var(--space-6) 0;
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-3);
  }

  .whitelabel-list li {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    color: var(--color-gray-300);
  }

  .whitelabel-list svg {
    color: var(--color-accent);
  }

  .whitelabel-pricing {
    display: flex;
    gap: var(--space-6);
    margin-bottom: var(--space-6);
  }

  .whitelabel-pricing span {
    background: rgba(255,255,255,0.1);
    padding: var(--space-2) var(--space-4);
    border-radius: var(--radius-md);
    font-size: var(--text-sm);
    color: var(--color-accent);
  }

  .process-card {
    background: rgba(255,255,255,0.05);
    border-radius: var(--radius-xl);
    padding: var(--space-8);
  }

  .process-card h4 {
    color: var(--color-white);
    margin-bottom: var(--space-6);
  }

  .process-card ol {
    list-style: none;
    padding: 0;
    margin: 0;
    counter-reset: step;
  }

  .process-card li {
    counter-increment: step;
    padding: var(--space-3) 0;
    color: var(--color-gray-400);
    border-bottom: 1px solid rgba(255,255,255,0.1);
    display: flex;
    align-items: center;
    gap: var(--space-3);
  }

  .process-card li:last-child {
    border-bottom: none;
  }

  .process-card li::before {
    content: counter(step);
    width: 28px;
    height: 28px;
    background: var(--color-accent);
    color: var(--color-white);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: var(--text-sm);
    font-weight: 700;
    flex-shrink: 0;
  }

  /* Process Section */
  .process-grid {
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    gap: var(--space-6);
  }

  .process-step {
    text-align: center;
    padding: var(--space-6);
  }

  .step-number {
    font-size: var(--text-4xl);
    font-weight: 800;
    color: var(--color-gray-200);
    margin-bottom: var(--space-4);
  }

  .process-step h3 {
    font-size: var(--text-lg);
    margin-bottom: var(--space-2);
  }

  .process-step p {
    font-size: var(--text-sm);
    color: var(--color-gray-600);
    margin: 0;
  }

  /* CTA */
  .cta-section {
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-dark) 100%);
    padding: var(--space-20) 0;
    text-align: center;
  }

  .cta-content h2 {
    color: var(--color-white);
    margin-bottom: var(--space-4);
  }

  .cta-content p {
    color: rgba(255,255,255,0.8);
    font-size: var(--text-xl);
    margin-bottom: var(--space-8);
  }

  .cta-actions {
    display: flex;
    justify-content: center;
    gap: var(--space-4);
    flex-wrap: wrap;
  }

  .btn-outline-light {
    border: 2px solid rgba(255,255,255,0.3);
    color: var(--color-white);
    background: transparent;
  }

  .btn-outline-light:hover {
    background: rgba(255,255,255,0.1);
    border-color: rgba(255,255,255,0.5);
    color: var(--color-white);
  }

  @media (max-width: 1024px) {
    .services-grid {
      grid-template-columns: 1fr;
    }

    .whitelabel-grid {
      grid-template-columns: 1fr;
    }

    .process-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media (max-width: 640px) {
    .page-hero h1 {
      font-size: var(--text-4xl);
    }

    .service-features ul {
      grid-template-columns: 1fr;
    }

    .service-meta {
      grid-template-columns: 1fr;
      gap: var(--space-2);
    }

    .whitelabel-list {
      grid-template-columns: 1fr;
    }

    .whitelabel-pricing {
      flex-direction: column;
      gap: var(--space-2);
    }

    .process-grid {
      grid-template-columns: 1fr;
    }

    .cta-actions {
      flex-direction: column;
    }

    .cta-actions .btn {
      width: 100%;
    }
  }
</style>
