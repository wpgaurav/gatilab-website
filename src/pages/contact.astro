---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout
  title="Contact"
  description="Start your project with Gatilab. Get in touch to discuss web development, SEO, content marketing, or design services."
>
  <!-- Hero -->
  <section class="page-hero">
    <div class="container">
      <div class="hero-content gsap-fade-up">
        <span class="section-tag">Contact</span>
        <h1>Let's Talk</h1>
        <p class="hero-description">
          Ready to build something great? Let's discuss your project.
          No pressure, no obligationâ€”just an honest conversation about what's possible.
        </p>
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="contact-section section">
    <div class="container">
      <div class="contact-grid">
        <!-- Contact Form -->
        <div class="contact-form-wrapper gsap-slide-left">
          <h2>Start Your Project</h2>
          <p>Tell us about your project and we'll get back to you within 24 hours.</p>

          <form class="contact-form" action="#" method="POST">
            <div class="form-row">
              <div class="form-group">
                <label for="name">Name *</label>
                <input type="text" id="name" name="name" required placeholder="Your name" />
              </div>
              <div class="form-group">
                <label for="email">Email *</label>
                <input type="email" id="email" name="email" required placeholder="your@email.com" />
              </div>
            </div>

            <div class="form-group">
              <label for="company">Company</label>
              <input type="text" id="company" name="company" placeholder="Your company name" />
            </div>

            <div class="form-group">
              <label for="service">What do you need? *</label>
              <select id="service" name="service" required>
                <option value="">Select a service</option>
                <option value="wordpress">WordPress Development</option>
                <option value="seo">SEO Services</option>
                <option value="content">Content Marketing</option>
                <option value="design">Web Design</option>
                <option value="branding">Branding & Logo</option>
                <option value="other">Something Else</option>
              </select>
            </div>

            <div class="form-group">
              <label for="budget">Budget Range</label>
              <select id="budget" name="budget">
                <option value="">Select your budget</option>
                <option value="under-3k">Under $3,000</option>
                <option value="3k-5k">$3,000 - $5,000</option>
                <option value="5k-10k">$5,000 - $10,000</option>
                <option value="10k-25k">$10,000 - $25,000</option>
                <option value="25k+">$25,000+</option>
              </select>
            </div>

            <div class="form-group">
              <label for="message">Tell us about your project *</label>
              <textarea id="message" name="message" required rows="5" placeholder="What are you trying to achieve? What challenges are you facing?"></textarea>
            </div>

            <button type="submit" class="btn btn-accent btn-lg">Send Message</button>
          </form>
        </div>

        <!-- Contact Info -->
        <div class="contact-info gsap-slide-right">
          <div class="info-card">
            <h3>Contact Information</h3>

            <div class="info-item">
              <div class="info-icon">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
                  <polyline points="22,6 12,13 2,6"/>
                </svg>
              </div>
              <div class="info-content">
                <strong>Email</strong>
                <a href="mailto:contact@gatilab.com">contact@gatilab.com</a>
              </div>
            </div>

            <div class="info-item">
              <div class="info-icon">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
                  <circle cx="12" cy="10" r="3"/>
                </svg>
              </div>
              <div class="info-content">
                <strong>Location</strong>
                <span>Delhi, India</span>
                <span class="subtext">Remote-first delivery worldwide</span>
              </div>
            </div>

            <div class="info-item">
              <div class="info-icon">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <circle cx="12" cy="12" r="10"/>
                  <polyline points="12 6 12 12 16 14"/>
                </svg>
              </div>
              <div class="info-content">
                <strong>Response Time</strong>
                <span>Within 24 hours on business days</span>
              </div>
            </div>
          </div>

          <div class="info-card">
            <h3>For Partnerships</h3>
            <p>
              Interested in white-label services or agency partnerships?
              Contact our founder directly.
            </p>
            <div class="founder-contact">
              <div class="founder-avatar">GT</div>
              <div class="founder-info">
                <strong>Gaurav Tiwari</strong>
                <span>Founder & CEO</span>
                <a href="mailto:gaurav@gatilab.com">gaurav@gatilab.com</a>
              </div>
            </div>
          </div>

          <div class="info-card highlight">
            <h3>What Happens Next?</h3>
            <ol>
              <li>We review your inquiry (within 24 hours)</li>
              <li>30-minute discovery call to understand your needs</li>
              <li>Detailed proposal within 3-5 business days</li>
              <li>Kickoff call once approved</li>
            </ol>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Preview -->
  <section class="faq-section section bg-light">
    <div class="container">
      <div class="section-header gsap-fade-up">
        <span class="section-tag">FAQ</span>
        <h2>Common Questions</h2>
      </div>
      <div class="faq-grid stagger-container">
        <div class="faq-item stagger-item">
          <h4>What's your minimum project size?</h4>
          <p>Web development starts at $3,500, SEO at $800/month, branding at $500. We price based on value, not hours.</p>
        </div>
        <div class="faq-item stagger-item">
          <h4>How long do projects take?</h4>
          <p>Business websites take 4-6 weeks, SEO shows first results in 3-4 months, branding takes 2-4 weeks. We're honest about timelines.</p>
        </div>
        <div class="faq-item stagger-item">
          <h4>Do you work with small businesses?</h4>
          <p>Yes. Our clients range from solopreneurs to Government of India. What matters is clear goals and valuing quality.</p>
        </div>
        <div class="faq-item stagger-item">
          <h4>What's your payment structure?</h4>
          <p>Projects: 50% upfront, 50% on completion. Retainers: Monthly billing in advance. Custom arrangements for enterprise.</p>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .page-hero {
    background: linear-gradient(135deg, var(--color-primary-dark) 0%, var(--color-primary) 100%);
    padding: var(--space-32) 0 var(--space-20);
    color: var(--color-white);
    text-align: center;
  }

  .page-hero h1 {
    color: var(--color-white);
    font-size: var(--text-5xl);
    margin-bottom: var(--space-6);
  }

  .hero-description {
    font-size: var(--text-xl);
    color: rgba(255,255,255,0.85);
    max-width: 700px;
    margin: 0 auto;
  }

  .section-tag {
    display: inline-block;
    font-size: var(--text-sm);
    font-weight: 600;
    color: var(--color-accent);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: var(--space-4);
  }

  .contact-grid {
    display: grid;
    grid-template-columns: 1.2fr 0.8fr;
    gap: var(--space-16);
    align-items: start;
  }

  .contact-form-wrapper h2 {
    margin-bottom: var(--space-2);
  }

  .contact-form-wrapper > p {
    color: var(--color-gray-600);
    margin-bottom: var(--space-8);
  }

  .contact-form {
    display: flex;
    flex-direction: column;
    gap: var(--space-5);
  }

  .form-row {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-5);
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }

  .form-group label {
    font-size: var(--text-sm);
    font-weight: 500;
    color: var(--color-gray-700);
  }

  .form-group input,
  .form-group select,
  .form-group textarea {
    padding: var(--space-3) var(--space-4);
    border: 1px solid var(--color-gray-300);
    border-radius: var(--radius-lg);
    font-size: var(--text-base);
    font-family: var(--font-sans);
    transition: border-color var(--transition-fast), box-shadow var(--transition-fast);
  }

  .form-group input:focus,
  .form-group select:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: var(--color-primary);
    box-shadow: 0 0 0 3px rgba(26, 54, 93, 0.1);
  }

  .form-group textarea {
    resize: vertical;
    min-height: 120px;
  }

  .contact-info {
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
  }

  .info-card {
    background: var(--color-gray-50);
    border-radius: var(--radius-xl);
    padding: var(--space-8);
  }

  .info-card.highlight {
    background: var(--color-primary);
    color: var(--color-white);
  }

  .info-card.highlight h3 {
    color: var(--color-white);
  }

  .info-card h3 {
    font-size: var(--text-lg);
    margin-bottom: var(--space-6);
  }

  .info-item {
    display: flex;
    gap: var(--space-4);
    padding: var(--space-4) 0;
    border-bottom: 1px solid var(--color-gray-200);
  }

  .info-item:last-child {
    border-bottom: none;
  }

  .info-icon {
    width: 44px;
    height: 44px;
    background: var(--color-white);
    border-radius: var(--radius-md);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-primary);
    flex-shrink: 0;
  }

  .info-content {
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
  }

  .info-content strong {
    font-size: var(--text-sm);
    color: var(--color-gray-500);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .info-content a {
    color: var(--color-primary);
    font-weight: 500;
  }

  .info-content .subtext {
    font-size: var(--text-sm);
    color: var(--color-gray-500);
  }

  .founder-contact {
    display: flex;
    align-items: center;
    gap: var(--space-4);
    margin-top: var(--space-4);
    padding-top: var(--space-4);
    border-top: 1px solid var(--color-gray-200);
  }

  .founder-avatar {
    width: 48px;
    height: 48px;
    background: var(--color-primary);
    color: var(--color-white);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    flex-shrink: 0;
  }

  .founder-info {
    display: flex;
    flex-direction: column;
  }

  .founder-info strong {
    color: var(--color-gray-900);
    text-transform: none;
    letter-spacing: 0;
  }

  .founder-info span {
    font-size: var(--text-sm);
    color: var(--color-gray-500);
  }

  .info-card.highlight ol {
    list-style: none;
    padding: 0;
    margin: 0;
    counter-reset: step;
  }

  .info-card.highlight li {
    counter-increment: step;
    padding: var(--space-3) 0;
    border-bottom: 1px solid rgba(255,255,255,0.1);
    display: flex;
    align-items: center;
    gap: var(--space-3);
  }

  .info-card.highlight li:last-child {
    border-bottom: none;
  }

  .info-card.highlight li::before {
    content: counter(step);
    width: 28px;
    height: 28px;
    background: var(--color-accent);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: var(--text-sm);
    font-weight: 700;
    flex-shrink: 0;
  }

  /* FAQ */
  .faq-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-8);
  }

  .faq-item {
    background: var(--color-white);
    border-radius: var(--radius-xl);
    padding: var(--space-6);
  }

  .faq-item h4 {
    font-size: var(--text-lg);
    margin-bottom: var(--space-3);
  }

  .faq-item p {
    color: var(--color-gray-600);
    margin: 0;
    font-size: var(--text-sm);
    line-height: 1.7;
  }

  @media (max-width: 1024px) {
    .contact-grid {
      grid-template-columns: 1fr;
    }

    .form-row {
      grid-template-columns: 1fr;
    }

    .faq-grid {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 640px) {
    .page-hero h1 {
      font-size: var(--text-4xl);
    }
  }
</style>
